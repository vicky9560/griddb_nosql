# v:0, i:1, c:2, k:3, y:4
mystring ="vicky"
print(mystring[0:3])
print(mystring[1:3]) # this is slicing of string
# v:0, i:1, c:2, k:3, y:4
# v:-5, i:-4, c:-3, k:-2, y:-1
mystring ="vicky"
print(mystring[0:3])
print(mystring[1:3])
print(mystring[2:-1]) # this is negative indexing
